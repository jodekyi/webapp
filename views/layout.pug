doctype html
html(style='width=100%')
	head
		meta(name='viewport' content='width=device-width initial-scale=1.0')
		block title
		link(rel='stylesheet' type='text/css' href='../bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' type='text/css' href='../font-awesome/css/font-awesome.min.css')
		link(rel='stylesheet' type='text/css' href='../my_css/site.css')
		script(type='text/javascript' src='../jquery/dist/jquery.min.js')
		script(type='text/javascript' src='../bootstrap/dist/js/bootstrap.min.js')
	body
		nav(class='navbar navbar-default')
			div(class='container-fluid')
				div(class='navbar-header')
					button(class='navbar-toggle collapsed' type='button' data-toggle='collapse' data-target='#collapsable' aria-expanded='false')
						span(class='sr-only')
						span(class='icon-bar')
						span(class='icon-bar')
						span(class='icon-bar')
					a(class='navbar-brand' href='/') Brand
				form(class='navbar-form navbar-left' role='search')
					div(class='input-group')
						input(class='form-control' type='text' placeholder='Search')
						span(class='input-group-btn')
							button(class='btn btn-default' type='submit')
								i(class='fa fa-search fa-lg')
				div(class='navbar-collapse collapse' id='collapsable' aria-expanded='false')
					ul(class='nav navbar-nav')
						li
							a(class='centerText' href='Tags')
								i(class='fa fa-tag')  Tags
						li
							a(class='centerText' href='Random')
								i(class='fa fa-random')  Random
					ul(class='nav navbar-nav navbar-right')
						li
							a(class='centerText' href='Login')
								i(class='fa fa-sign-in')  Login
						li
							a(class='centerText' href='Register')
								i(class='fa fa-user-plus')  Register
	block content